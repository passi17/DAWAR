    <script>
                // Toggle navbar on mobile
                const hamburger = document.getElementById('hamburger');
                const navbarNav = document.getElementById('navbarNav');
                hamburger.addEventListener('click', () => {
                    navbarNav.classList.toggle('show');
                });

                // Toggle dropdown on mobile
                const productToggle = document.getElementById('productToggle');
                const dropdownMenu = document.getElementById('dropdownMenu');

                productToggle.addEventListener('click', (e) => {
                    if (window.innerWidth <= 768) {
                        e.preventDefault();
                        dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
                    }
                });


                //contact page

                // Select all buttons with the class 'openBtn'
                const buttons = document.querySelectorAll(".openBtn");

                buttons.forEach(btn => {
                    btn.addEventListener("click", function () {
                        let modal = document.createElement("div");
                        modal.className = "modal";

                        modal.innerHTML = `
        <div class="modal-content">
        <h2>Contact Us</h2>
        <form id="demoForm">
        <input type="text" id="name" name="name" placeholder="Your Name" required>
        <input type="text" id="business" name="business" placeholder="Your Business" required>
        <input type="email" id="email" name="email" placeholder="Your Email" required>
        <input type="text" id="ProductName" name="ProductName" placeholder="Product You want" required>
        <input type="tel" id="phone" name="phone" placeholder="Your Phone" required>

        <button type="submit" class="cta-btn"
            style="display:inline-block; padding:12px 24px; background:#25D366; color:#fff;
                   font-size:16px; font-weight:bold; border-radius:8px; text-decoration:none;
                   text-align:center; width:100%">
            Submit
        </button>
        <button type="button" id="closeBtn">Close</button>
        </form>
        </div>
                    `;

                        document.body.appendChild(modal);

                        // Close button
                        modal.querySelector("#closeBtn").addEventListener("click", function () {
                            modal.remove();
                        });

                        // Handle form submit
                        modal.querySelector("#demoForm").addEventListener("submit", function (e) {
                            e.preventDefault();

                            let name = document.getElementById("name").value;
                            let business = document.getElementById("business").value;
                            let email = document.getElementById("email").value;
                            let ProductName = document.getElementById("ProductName").value;
                            let phone = document.getElementById("phone").value;

                            // Create WhatsApp message
                            let message = `Hello, I Am Interested in Your Products.%0A
        Name: ${name}%0A
        Business: ${business}%0A
        Email: ${email}%0A
        Product Name: ${ProductName}%0A
        Phone: ${phone}`;

                            // WhatsApp link
                            let whatsappURL = "https://wa.me/918000000746?text=" + message;

                            // Open WhatsApp
                            window.open(whatsappURL, "_blank");
                        });
                    });
                });
    </script>
 