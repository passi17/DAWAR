@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dawar Steels Navbar</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        * {
            scroll-behavior: smooth;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        /* Top Header */
        .top-header {
            background: #1f2a44;
            color: white;
            font-size: 14px;
            padding: 10px 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .top-header .left span {
                margin-right: 20px;
            }

            .top-header a {
                color: #ffc107;
                text-decoration: none;
            }

                .top-header a:hover {
                    text-decoration: underline;
                }

        /*navbar*/
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #eaeaea;
            padding: 10px 20px;
            position: relative;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 20px;
            color: black;
            display: flex;
            align-items: center;
        }

        .logo-image {
            height: 45px;
            border-radius: 8px;
            margin-right: 8px;
        }

        .navbar-nav {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
        }

        .nav-item {
            margin-right: 20px;
            position: relative;
        }

        .nav-link {
            text-decoration: none;
            color: black;
            font-size: 16px;
            padding: 5px 0;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #6a0dad;
            }

        .dropdown-toggle i {
            margin-left: 5px;
            font-size: 12px;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background: #fff;
            min-width: 160px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            top: 100%;
            left: 0;
            z-index: 2000;
        }

            .dropdown-menu .dropdown-item {
                padding: 10px 16px;
                color: #333;
                text-decoration: none;
                display: block;
                transition: background 0.3s ease;
            }

                .dropdown-menu .dropdown-item:hover {
                    background: #f0f0f0;
                    color: #6a0dad;
                }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .navbar-actions {
            display: flex;
            align-items: center;
        }

        .nav-button {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 15px;
            font-weight: bold;
            transition: 0.3s;
            text-decoration: none;
        }

        .nav-btn-outline {
            background: #fff;
            border: 1px solid black;
            margin-right: 10px;
        }

            .nav-btn-outline:hover {
                background: #f0f0f0;
                color: #6a0dad;
                border-color: #6a0dad;
            }

        .nav-btn-primary {
            background: #212529;
            color: #fff;
        }

            .nav-btn-primary:hover {
                background: #6a0dad;
            }

        /* ---------- Mobile Styles ---------- */
        .hamburger {
            display: none;
            font-size: 24px;
            cursor: pointer;
        }

        /*corousel*/
        .carousel-container {
            position: relative;
            width: 100%;
            height: 600px;
            margin: auto;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
        }

        .carousel-slide-wrapper {
            display: flex;
            height: 100%;
            transition: transform 0.5s ease-in-out;
        }

        .carousel-slide {
            flex-shrink: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            position: relative;
            color: white;
        }

        .slide-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .slide-content {
            position: absolute;
            top: 50%;
            left: 10%;
            transform: translateY(-50%);
            z-index: 2;
            max-width: 500px;
        }

            .slide-content h1 {
                font-size: 3.5rem;
                font-weight: bold;
                margin-bottom: 1rem;
                line-height: 1.1;
            }

            .slide-content p {
                font-size: 1.2rem;
                margin-bottom: 2rem;
                line-height: 1.5;
            }

        .slide-actions .btn {
            display: inline-block;
            padding: 12px 24px;
            font-weight: bold;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-secondary {
            background-color: transparent;
            border: 2px solid white;
            color: white;
            margin-left: 15px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .carousel-nav-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.5);
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 10px 15px;
            border-radius: 50%;
            z-index: 3;
            transition: background-color 0.3s ease;
        }

            .carousel-nav-btn:hover {
                background: rgba(0, 0, 0, 0.8);
            }

            .carousel-nav-btn.prev {
                left: 20px;
            }

            .carousel-nav-btn.next {
                right: 20px;
            }

        .carousel-dots-container {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 3;
        }

        .carousel-dot {
            display: inline-block;
            width: 12px;
            height: 12px;
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            margin: 0 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .carousel-dot.active {
                background-color: white;
            }

        /* ===== MODAL ===== */

        .modal {
            position: fixed;
            inset: 0;
            /* shorthand for top:0; right:0; bottom:0; left:0 */
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .modal-content {
            background: #fff;
            padding: 30px 25px;
            border-radius: 12px;
            width: 450px;
            max-width: 90%;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
            animation: modalFade 0.3s ease-out;
        }

        @@keyframes modalFade {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .modal-content h2 {
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #333;
            text-align: center;
        }

        .modal-content form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .modal-content input {
            padding: 10px 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1rem;
        }

        .modal-content button {
            padding: 12px 20px;
            font-size: 1rem;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            transition: 0.3s;
        }

            .modal-content button#closeBtn {
                background: #dc3545;
                color: #fff;
            }

                .modal-content button#closeBtn:hover {
                    background: #c82333;
                }

            .modal-content button.cta-btn {
                background: #25d366;
                color: #fff;
                font-weight: bold;
            }

                .modal-content button.cta-btn:hover {
                    background: #1ebe57;
                }

        /*products*/
        .product-section {
            padding: 2rem 20px 4rem 20px;
            text-align: center;
            background: #8e9eab;
            background: -webkit-linear-gradient(to bottom, #eef2f3, #8e9eab);
            background: linear-gradient(to bottom, #eef2f3, #8e9eab);
        }

        /* --- Header Styling --- */
        .product-header {
            max-width: 800px;
            margin: 0 auto 50px auto;
        }

            .product-header h1 {
                font-size: 2.5rem;
                font-weight: bold;
                color: #343a40;
                margin-bottom: 10px;
            }

            .product-header p {
                font-size: 1rem;
                color: #6c757d;
                line-height: 1.6;
            }

        .product-cards-container {
            display: flex;
            justify-content: center;
            gap: 45px;
            flex-wrap: wrap;
        }

        .product-card {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            max-width: 350px;
        }

            .product-card:hover {
                transform: translateY(-5px);
                /* Lift effect on hover */
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            }

        .card-image-wrapper {
            position: relative;
            overflow: hidden;
        }

        .card-image {
            width: 100%;
            height: 200px;
            display: block;
            filter: brightness(0.7);
            /* Darken image to make label readable */
        }

        .image-label {
            position: absolute;
            bottom: 20px;
            left: 20px;
            color: #ffffff;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-content {
            padding: 20px;
            text-align: left;
        }

        .card-description {
            font-size: 0.9rem;
            color: #495057;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid #e9ecef;
            padding-top: 15px;
        }

        .product-variants {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: bold;
        }

        .view-link {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

            .view-link:hover {
                color: #0056b3;
            }

            .view-link i {
                margin-left: 5px;
            }

        /*about*/
        .container {
            margin: auto;
            padding: 40px 40px;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            background-color: #1e2535;
            box-sizing: border-box;
        }

        .text-section {
            flex: 2;
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 4px solid #f59e0b;
            flex-wrap: wrap;
        }

            .text-section h1 {
                font-size: 2em;
                color: #333;
                margin-bottom: 20px;
            }

            .text-section p {
                font-size: 1em;
                line-height: 1.6;
                margin-bottom: 15px;
            }

            .text-section .columns {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
                margin-top: 30px;
            }

            .text-section .column-item {
                flex: 1;
                min-width: 200px;
            }

                .text-section .column-item h3 {
                    margin-bottom: 5px;
                    color: #555;
                }

            .text-section .learn-more-btn {
                display: inline-block;
                padding: 10px 20px;
                margin-top: 20px;
                background-color: #333;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .text-section .learn-more-btn:hover {
                    background-color: #555;
                }

        .image-section {
            flex: 1;
            min-width: 300px;
            display: grid;
            gap: 20px;
            grid-template-rows: 2fr 1fr;
            /* Main image takes more space */
        }

        .image-block {
            background-color: #555;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            overflow: hidden;
            position: relative;
            border: 4px solid lightgray;
        }

            .image-block img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                position: absolute;
                top: 0;
                left: 0;
                z-index: 1;
                filter: brightness(0.7);
            }

            .image-block .content {
                position: relative;
                z-index: 2;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                height: 100%;
                width: 100%;
            }

            .image-block h3 {
                margin: 0;
                font-size: 1.2em;
            }

            .image-block .icon {
                font-size: 3em;
                margin-bottom: 10px;
            }

        .small-blocks {
            display: flex;
            gap: 20px;
        }

            .small-blocks .image-block {
                flex: 1;
                /* Adjust height for smaller blocks */
            }

        .image-block.main-image {
            min-height: 350px;
            /* Adjust height for main block */
        }

        /*contact*/
        .contact-section {
            text-align: center;
            padding: 60px 40px;
            background-color: #d3d3d3;
        }

            .contact-section h2 {
                font-size: 24px;
                margin-bottom: 10px;
                font-weight: bold;
                color: #111;
            }

            .contact-section p {
                font-size: 15px;
                color: #555;
                margin-bottom: 40px;
            }

        .contact-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin: auto;
        }

        .contact-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px 20px;
            text-align: center;
            transition: transform 0.3s;
        }

            .contact-card:hover {
                transform: translateY(-5px);
            }

            .contact-card i {
                font-size: 28px;
                color: #374151;
                margin-bottom: 15px;
                display: block;
            }

            .contact-card h3 {
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 12px;
                color: #111;
            }

            .contact-card p {
                font-size: 14px;
                color: #555;
                margin-bottom: 8px;
            }

            .contact-card a {
                color: #111;
                text-decoration: none;
                font-size: 14px;
            }

                .contact-card a:hover {
                    color: blue;
                }

        /*footer*/

        footer {
            background: #0f172a;
            color: #d1d5db;
            padding: 2rem 4rem;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: auto;
        }

        /* Logo + description */
        .footer-logo {
            max-width: 260px;
        }

            .footer-logo img {
                width: 48px;
                height: 48px;
                object-fit: contain;
                margin-right: 10px;
                border-radius: 8px;
                border: 2px solid lightgray;
            }

            .footer-logo h3 {
                color: #fff;
                font-size: 18px;
                margin-bottom: 6px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .footer-logo p {
                font-size: 14px;
                color: #9ca3af;
                margin-bottom: 15px;
                line-height: 1.5;
            }

        .footer-social {
            display: flex;
            gap: 12px;
            margin-top: 10px;
        }

            .footer-social a {
                color: #d1d5db;
                font-size: 16px;
                text-decoration: none;
                transition: color 0.3s;
            }

                .footer-social a:hover {
                    color: #60a5fa;
                }

        /* Column headings */
        .footer-column {
            text-align: left;
        }

            .footer-column h4 {
                color: #fff;
                font-size: 15px;
                margin-bottom: 15px;
                text-align: left;
            }

            .footer-column ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

                .footer-column ul li {
                    margin-bottom: 10px;
                }

                    .footer-column ul li a {
                        text-decoration: none;
                        color: #d1d5db;
                        font-size: 14px;
                        transition: color 0.3s;
                    }

                        .footer-column ul li a:hover {
                            color: #60a5fa;
                        }

        /* Contact info */
        .contact-info p {
            font-size: 14px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
            color: #d1d5db;
        }

        .contact-info i {
            color: #60a5fa;
        }

        /* Bottom strip */
        .footer-bottom {
            border-top: 1px solid #1e293b;
            margin-top: 40px;
            padding-top: 20px;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            font-size: 13px;
            color: #9ca3af;
        }

            .footer-bottom a {
                text-decoration: none;
                color: #9ca3af;
                margin-left: 15px;
                transition: color 0.3s;
            }

                .footer-bottom a:hover {
                    color: #60a5fa;
                }

        /* Basic Responsiveness */

        @@media (max-width: 1050px) {
            .text-section p

        {
            font-size: 0.8em;
        }

        }

        @@media (max-width: 950px) {
            /*top header*/
            .top-header .left span

        {
            display: flex;
        }

        .navbar {
            flex-wrap: wrap;
        }

        .navbar-nav {
            flex-direction: column;
            width: 100%;
            display: none;
            background: #eaeaea;
            margin-top: 10px;
        }

            .navbar-nav.show {
                display: flex;
            }

        .nav-item {
            margin: 10px 0;
        }

        .hamburger {
            display: block;
        }

        /* Dropdown in mobile */
        .dropdown-menu {
            position: relative;
            box-shadow: none;
            margin-left: 15px;
            margin-top: 10px;
        }

        .dropdown-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
            /* centers text + icon */
            gap: 5px;
            /* spacing between text and icon */
        }

        .navbar-actions {
            display: none;
        }

        /*model*/
        .modal-content {
            width: 90%;
            padding: 25px 15px;
        }

        /*products*/
        .product-header {
            margin-bottom: 30px;
        }

            .product-header h1 {
                font-size: 2rem;
            }

        .product-cards-container {
            flex-direction: column;
            align-items: center;
        }

        .product-card {
            margin-bottom: 25px;
        }

        .slide-content {
            left: 5%;
            right: 5%;
            text-align: center;
            max-width: none;
        }

        .slide-actions {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .btn-secondary {
            margin-left: 0;
            margin-top: 10px;
        }

        /*about*/
        .container {
            padding: 1.5cm 0.6cm;
            text-align: justify;
        }

        .text-section {
            padding: 1rem;
        }

            .text-section h1 {
                font-size: 2rem;
            }

        /*footer*/
        .footer-bottom {
            text-align: center;
        }

        .footer-container {
            display: grid;
        }

        }
    </style>
</head>

