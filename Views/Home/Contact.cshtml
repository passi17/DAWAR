    <style>
        * {
            box-sizing: border-box;
            scroll-behavior: smooth;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }


        /*hero*/
        .hero {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 80px 8%;
            background: linear-gradient(rgb(238, 242, 243), rgb(142, 158, 171));
            gap: 90px;
            flex-wrap: wrap;
        }

        .hero-text {
            flex: 1;
        }

            .hero-text h1 {
                font-size: 2.8rem;
                font-weight: 700;
                margin-bottom: 20px;
                line-height: 1.3;
            }

            .hero-text p {
                font-size: 1.1rem;
                color: #444;
                margin-bottom: 25px;
                line-height: 1.6;
            }

        .hero-btn-group {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .hero-btn {
            padding: 12px 24px;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .hero-btn-primary {
            background: #343a40;
            color: #fff;
        }

            .hero-btn-primary:hover {
                background: #23272b;
            }

        .hero-btn-secondary {
            background: white;
            border: 2px solid black;
            color: #333;
        }

            .hero-btn-secondary:hover {
                background: #dee2e6;
            }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: center;
            position: relative;
            background-color: #000;
            border-radius: 12px;
        }

            .hero-image img {
                width: 100%;
                border-radius: 12px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
                background-color: white;
                border: 5px solid black;
            }

        /* ===== MODAL ===== */

        .modal {
            position: fixed;
            inset: 0;
            /* shorthand for top:0; right:0; bottom:0; left:0 */
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .modal-content {
            background: #fff;
            padding: 30px 25px;
            border-radius: 12px;
            width: 450px;
            max-width: 90%;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
            animation: modalFade 0.3s ease-out;
        }

        @@keyframes modalFade {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .modal-content h2 {
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #333;
            text-align: center;
        }

        .modal-content form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .modal-content input {
            padding: 10px 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1rem;
        }

        .modal-content button {
            padding: 12px 20px;
            font-size: 1rem;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            transition: 0.3s;
        }

            .modal-content button#closeBtn {
                background: #dc3545;
                color: #fff;
            }

                .modal-content button#closeBtn:hover {
                    background: #c82333;
                }

            .modal-content button.cta-btn {
                background: #25d366;
                color: #fff;
                font-weight: bold;
            }

                .modal-content button.cta-btn:hover {
                    background: #1ebe57;
                }


        /*contact*/
        .contact-us {
            text-align: center;
            padding: 40px 40px 60px 40px;
            background-color: white;
        }

            .contact-us h2 {
                font-size: 34px;
                margin-bottom: 10px;
                font-weight: bold;
                color: #111;
            }

            .contact-us p {
                font-size: 15px;
                color: #555;
                margin-bottom: 40px;
            }

        .contact-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin: auto;
        }

        .contact-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px 20px;
            text-align: center;
            transition: transform 0.3s;
        }

            .contact-card:hover {
                transform: translateY(-5px);
            }

            .contact-card i {
                font-size: 28px;
                color: #374151;
                margin-bottom: 15px;
                display: block;
            }

            .contact-card h3 {
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 12px;
                color: #111;
            }

            .contact-card p {
                font-size: 14px;
                color: #555;
                margin-bottom: 8px;
            }

            .contact-card a {
                color: #111;
                text-decoration: none;
                font-size: 14px;
            }

                .contact-card a:hover {
                    color: blue;
                }


        /*contact form*/
        .contact-section {
            padding: 50px 50px;
            background-color: #1e2535;
        }

        .contact-container {
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
        }

        .contact-form {
            flex: 1 1 45%;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            border: 4px solid #f59e0b;
        }

            .contact-form h2 {
                margin-bottom: 20px;
                color: #333;
            }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group textarea {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 14px;
            }

            .form-group textarea {
                resize: none;
                height: 120px;
            }

        .submit-btn {
            display: inline-block;
            background: #d92323;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .submit-btn:hover {
                background: #b91d1d;
            }

        .contact-map {
            flex: 1 1 45%;
            min-height: 400px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border: 4px solid gray;
        }




        /*expertise*/
        .expertise-section {
            width: 100%;
            text-align: center;
            padding: 30px;
            box-sizing: border-box;
            background-color: #d3d3d3;
        }

        .expertise-header h1 {
            font-size: 2.5em;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .expertise-header p {
            font-size: 1.1em;
            color: #666;
            max-width: 800px;
            margin: 0 auto 40px auto;
            line-height: 1.6;
        }

        .expertise-cards {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
        }

        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px black;
            overflow: hidden;
            transition: transform 0.3s ease;
            flex: 1 1 300px;
            max-width: 350px;
            text-align: left;
        }

            .card:hover {
                transform: translateY(-10px);
            }

            .card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                display: block;
            }

            .card h3 {
                font-size: 1.4em;
                font-weight: bold;
                color: #333;
                margin: 20px 20px 10px 20px;
            }

            .card p {
                font-size: 1em;
                color: #777;
                padding: 0 20px 20px 20px;
                line-height: 1.5;
            }

        @@media (max-width: 950px) {
            .hero

        {
            flex-direction: column;
            text-align: left;
            padding: 50px 5%;
            gap: 50px;
        }

        .hero-image {
            margin-top: 0px;
            min-height: 250px;
        }

        .hero-text h1 {
            font-size: 1.62rem;
        }

        .hero-text p {
            font-size: 1.1rem;
            color: #444;
            margin-bottom: 25px;
            text-align: justify;
        }

        .hero-btn-group {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
        }

        /*model*/
        .modal-content {
            width: 90%;
            padding: 25px 15px;
        }

        }
    </style>
 

 


