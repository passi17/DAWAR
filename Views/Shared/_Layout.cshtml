            <!-- Products -->
            <div class="footer-column">
                <h4>Products</h4>
                <ul>
                    <li><a href="products/Washers/washers.html">Washers</a></li>
                    <li><a href="products/Bolts/Bolts.html">Bolts</a></li>
                    <li><a href="products/Nuts/Nuts.html">Nuts</a></li>

