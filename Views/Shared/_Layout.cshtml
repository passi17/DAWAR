    <nav class="navbar">
        <div class="navbar-brand">
            <img src="Images/logo.jpg" alt="Dawar Steels" class="logo-image"> DAWAR STEELS
        </div>

        <div class="hamburger" id="hamburger">
            <i class="fas fa-bars"></i>
        </div>

        <ul class="navbar-nav" id="navbarNav">
            <li class="nav-item"><a href="/Home/index" class="nav-link">HOME</a></li>
            <li class="nav-item"><a href="/Home/About" class="nav-link">ABOUT</a></li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="productToggle">
                    PRODUCTS <i class="fas fa-chevron-down"></i>
